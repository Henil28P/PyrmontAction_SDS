import mongoose from 'mongoose';

const PostSchema = new mongoose.Schema(
  {
    title: String,
    content: String,
    authorEmail: String,
    status: { type: String, enum: ['pending', 'published', 'rejected'], default: 'pending' },
    publishedAt: Date,
  },
  { timestamps: true }
);

export default mongoose.model('Post', PostSchema);
